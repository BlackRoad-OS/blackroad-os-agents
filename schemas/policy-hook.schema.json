{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://blackroad.schemas/policy-hook.schema.json",
  "title": "Policy Hook Schema",
  "type": "object",
  "properties": {
    "hook_id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
    "hook_type": { "type": "string", "enum": ["pre-merge", "post-merge", "sev-triage", "data-access"] },
    "description": { "type": "string" },
    "triggers": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "actions": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    }
  },
  "required": ["hook_id", "hook_type", "description", "triggers", "actions"],
  "additionalProperties": false
}
