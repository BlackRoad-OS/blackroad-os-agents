{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://blackroad.systems/schemas/pack.schema.json",
  "title": "BlackRoad OS Pack Schema",
  "description": "ðŸ“¦ Schema for defining Packs in the BlackRoad OS ecosystem",
  "type": "object",
  "required": ["id", "name", "repo", "owning_team", "description"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^pack\\.[a-z0-9-]+$",
      "description": "Unique pack identifier (e.g., pack.finance)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Human-readable pack name"
    },
    "repo": {
      "type": "string",
      "pattern": "^blackroad-os-",
      "description": "Repository name for this pack"
    },
    "owning_team": {
      "type": "string",
      "description": "Team responsible for this pack"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Short description of the pack's purpose"
    },
    "domains": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Associated domain names"
    },
    "agents": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^agent\\."
      },
      "description": "Agent IDs registered to this pack"
    },
    "risk_level": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "description": "Default risk level for agents in this pack"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "deprecated"]
    }
  }
}
