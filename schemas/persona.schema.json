{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://blackroad.schemas/persona.schema.json",
  "title": "Agent Persona Schema",
  "type": "object",
  "properties": {
    "traits": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "uniqueItems": true
    },
    "leadership_style": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": ["traits", "leadership_style"],
  "additionalProperties": false
}
