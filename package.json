{
  "name": "blackroad-os-agents",
  "version": "0.1.0",
  "private": true,
  "description": "Central registry and SDK for Blackroad OS agents",
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "tsx watch api/index.ts",
    "start": "node dist/api/index.js",
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
    "test:validate": "node scripts/validate_agents.ts",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "br-agent": "ts-node --esm src/cli.ts",
    "postbuild": "ts-node --esm scripts/postbuild.ts"
  },
  "files": [
    "dist",
    "registry",
    "public/sig.beacon.json"
  ],
  "bin": {
    "br-agent": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "commander": "^12.0.0",
    "hono": "^4.6.14",
    "tsx": "^4.19.2",
    "zod": "^3.22.4"
  }
}
